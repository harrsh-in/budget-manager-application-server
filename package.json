{
    "name": "budget-manager-application-server",
    "version": "1.0.0",
    "description": "Welcome to the Budget Management System! This application aims to provide the goodness of YNAB while keeping it simple like GoodBudget. Manage your budgets, accounts, transactions, goals, and more with ease.",
    "main": "src/app.ts",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/app.ts",
        "start": "node dist/app.js",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.{ts,json}\"",
        "lint": "eslint src/**/*.{ts,tsx} --fix"
    },
    "keywords": [],
    "author": "Harrsh Patel <harrsh-in>",
    "license": "MIT",
    "dependencies": {
        "express": "^4.19.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.2",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.3.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.13.0"
    }
}
